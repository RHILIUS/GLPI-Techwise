<!DOCTYPE html>
<html lang="{{ lang }}" {% if high_contrast %}data-high-contrast="1"{% endif %}
      {{ glpi_request_id is defined ? 'data-glpi-request-id=' ~ glpi_request_id : '' }}>
<head>
   <title>{{ title }} - GLPI</title>

   <meta charset="utf-8" />

   {# prevent IE to turn into compatible mode... #}
   <meta http-equiv="X-UA-Compatible" content="IE=edge" />

   {# auto desktop / mobile viewport #}
   <meta name="viewport" content="width=device-width, initial-scale=1" />

   {# prevent robots to index GLPI instances #}
   <meta name="robots" content="noindex, nofollow" />

    {# Custom header tags #}
    {% for header_tag in custom_header_tags|merge(get_plugins_header_tags(is_anonymous_page|default(false))) %}
        <{{ header_tag.tag }} {% for key, value in header_tag.properties %}{{ key }}="{{ value }}" {% endfor %}/>
    {% endfor %}

   <meta property="glpi:csrf_token" content="{{ csrf_token(true) }}" />

   {% for css_file in css_files|merge(get_plugins_css_files(is_anonymous_page|default(false))) %}
      <link rel="stylesheet" type="text/css" href="{{ css_path(css_file.path, css_file.options ?? []) }}" />
   {% endfor %}

   {{ custom_css() }}

   <!-- TECHWISE Custom Logo CSS -->
   <style>
   /* TECHWISE Custom Logo Override */
   .page .glpi-logo {
       background: none !important;
       height: 55px;
       width: 150px !important;
       display: flex !important;
       align-items: center !important;
       justify-content: flex-start !important;
       font-weight: bold !important;
       font-size: 24px !important;
       color: #ffffff !important;
       letter-spacing: 2px !important;
       text-shadow: 0 1px 3px rgba(0,0,0,0.5) !important;
   }

   .page .glpi-logo::before {
       content: "TECHWISE" !important;
       display: block !important;
   }

   .page-anonymous .glpi-logo {
       background: none !important;
       width: 200px !important;
       height: 110px !important;
       display: flex !important;
       align-items: center !important;
       justify-content: center !important;
       font-weight: bold !important;
       font-size: 36px !important;
       color: #2c3e50 !important;
       letter-spacing: 3px !important;
       margin: 0 auto !important;
       text-align: center !important;
       position: relative !important;
       left: 0 !important;
       right: 0 !important;
   }

   /* Ensure the parent container doesn't interfere */
   .page-anonymous .text-center .col-md {
       display: flex !important;
       justify-content: center !important;
       width: 100% !important;
   }
   
   /* Additional centering for the text-center container */
   .page-anonymous .text-center {
       width: 100% !important;
       display: flex !important;
       justify-content: center !important;
   }

   .page-anonymous .glpi-logo::before {
       content: "TECHWISE" !important;
       display: block !important;
   }

   /* Dark theme override */
   body.theme-dark .page .glpi-logo,
   body.theme-dark .page-anonymous .glpi-logo {
       color: #ffffff !important;
       text-shadow: 0 1px 3px rgba(0,0,0,0.7) !important;
   }
   
   /* Extra brightness for certain themes */
   body[class*="palette-dark"] .page .glpi-logo,
   body[class*="palette-midnight"] .page .glpi-logo,
   body[class*="palette-darker"] .page .glpi-logo {
       color: #ffffff !important;
       text-shadow: 0 0 10px rgba(255,255,255,0.3) !important;
   }

   /* Collapsed navbar logo */
   body.navbar-collapsed .navbar-brand .glpi-logo {
       background: none !important;
       width: 40px !important;
       height: 40px !important;
       display: flex !important;
       align-items: center !important;
       justify-content: center !important;
       font-weight: bold !important;
       font-size: 12px !important;
       color: #ffffff !important;
       letter-spacing: 1px !important;
       text-shadow: 0 1px 2px rgba(0,0,0,0.5) !important;
   }

   body.navbar-collapsed .navbar-brand .glpi-logo::before {
       content: "TW" !important;
       display: block !important;
   }
   </style>

   <link rel="shortcut icon" type="images/x-icon" href="{{ asset_path('/pics/favicon.ico') }}" />

   {% for js_file in js_files %}
      <script type="text/javascript" src="{{ js_path(js_file.path, js_file.options ?? []) }}"></script>
   {% endfor %}

   {% for js_file in js_modules %}
      <script type="module" src="{{ js_path(js_file.path, js_file.options ?? []) }}"></script>
   {% endfor %}

   {{ locales_js() }}
</head>
